                if ((x == y) || (x == z) || (y == z)) {
                    cout << "Код 0. Вычисление невозможно" << endl;
                }
                else {
                    cout << (x + y + z) - max(x, max(y, z)) - min(x, min(y, z)) << endl;
                }
            }
        }
        else {
            cout << "Неверный номер бита" << endl;
        }
