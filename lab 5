#include <iostream>
#include <limits>
using namespace std;

int main() {

    setlocale(LC_ALL, "Russian");

    bool c;

    cout << "Выберите подпункт (0,1)" << endl;
    cin >> c;

    if (c == false) {

        const short NMax = 8;
        short counter = 0;
        bool flag_1 = false;

        int arr[NMax];

        cout << "Введите 8 чисел" << endl;
        for (short j = 0; j < NMax; ++j) {
            cin >> arr[j];
        }
        cout << endl;
        for (short i = 0; i < NMax; ++i) {
            if (arr[i] == 25) {
                ++counter;
            }
            if (counter == 3) {
                flag_1 = true;
                break;
            }
        }
        if (flag_1 == true) {
            for (short i = 0; i < NMax - 1; ++i) {
                for (short j = i + 1; j < NMax; ++j) {
                    if (arr[i] > arr[j]) {
                        swap(arr[i], arr[j]);
                    }
                }
            }
            for (short i = 0; i < NMax; ++i) {
                cout << arr[i] << endl;
            }
        }
        else {
            cout << "25 встречается меньше 3 раз" << endl;
        }
    }
    else {
        const short NMax = 3;
        const short MMax = 4;
        int matrix[NMax][MMax] = {
        {1,2,2,1},
        {4,1,1,1},
        {1,1,1,1}
        };

        cout << "Введитие матрицу размера 3x4" << endl;

        /*for (short i = 0; i < NMax; ++i) {
            for (short j = 0; j < MMax; ++j) {
                cin >> matrix[i][j];
            }
        }
        */

        for (short i = 0; i < NMax; ++i) {
            for (short j = 0; j < MMax; ++j) {
                cout << matrix[i][j] << " ";
            }
            cout << endl;
        }

        cout << endl;

        short max_str = 0;
        bool flag_2 = false;
        short ans;

        for (short i = 0; i < NMax; ++i) {
            short counter = 0;
            for (short j = 0; j < MMax; ++j) {
                if (matrix[i][j] == 0) {
                    flag_2 = true;
                    ++counter;
                }
             short tmp = max_str;
             max_str = max(max_str, counter);
            if (max_str > tmp) {
                ans = i;
            }
            }
        }
        if (flag_2 == true) {
            for (short j = 0; j < MMax; ++j) {
                if (matrix[ans][j] == 0) {
                    matrix[ans][j] = 888;
                }
            }
            for (short i = 0; i < NMax; ++i) {
                for (short j = 0; j < MMax; ++j) {
                    cout << matrix[i][j] << " ";
                }
                cout << endl;
            }
        }
        else {
            cout << "Нет 0" << endl;
        }
    }

    return 0;
}
